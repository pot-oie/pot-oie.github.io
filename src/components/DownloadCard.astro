---
// src/components/DownloadCard.astro
interface Props {
  title: string;
  url: string;
  size?: string;
  desc?: string;
}

const { title, url, size, desc } = Astro.props;

// 自动提取后缀名 (如 PDF, ZIP)
const ext = url.split(".").pop()?.toUpperCase().slice(0, 4) || "FILE";
---

<a href={url} download class="ink-fluid-card group">
  <div class="icon-container">
    <span class="ext-text">{ext}</span>
  </div>

  <div class="header">
    <h3 class="title font-serif">{title}</h3>
    {size && <span class="size-badge">{size}</span>}
  </div>

  {desc && <p class="desc">{desc}</p>}

  <div class="action-btn">
    <svg viewBox="0 0 24 24" fill="currentColor" class="download-icon">
      <path d="M12 16L7 11H10V4H14V11H17L12 16ZM2 20V18H22V20H2Z"></path>
    </svg>
  </div>
</a>

<style>
  /* =========================================
     1. 卡片容器 (Grid Layout)
     ========================================= */
  .ink-fluid-card {
    position: relative;
    margin: 2em 0;
    padding: 1rem;
    text-decoration: none;
    border-radius: 12px;
    border: 1px solid transparent;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    background-color: var(--color-ink-50, #fafafa);

    /* --- 桌面端 Grid 布局 (≥641px) --- */
    display: grid;
    /* 三列：图标(auto) | 内容(1fr) | 按钮(auto) */
    grid-template-columns: auto 1fr auto;
    /* 定义两行 */
    grid-template-rows: auto auto;
    /* 定义区域布局图 */
    grid-template-areas:
      "icon header action"
      "icon desc   action";
    /* 列间距 1rem, 行间距 0.25rem */
    gap: 0.25rem 1rem;
    /* 垂直居中对齐 */
    align-items: center;
  }

  /* --- 移动端 Grid 布局 (≤640px) --- */
  @media (max-width: 640px) {
    .ink-fluid-card {
      /* 两列 */
      grid-template-columns: auto 1fr;
      grid-template-areas:
        "icon header" /* 第一行：图标 + 标题栏 (实现对齐) */
        "desc desc"; /* 第二行：描述跨满整行 (沉到底部) */
      /* 调整间距，增加行距 */
      gap: 0.8rem 1rem;
      /* 底部留白，给绝对定位的按钮腾位置 */
      padding-bottom: 3.6rem;
    }
  }

  /* [Dark] 默认背景 */
  html.dark .ink-fluid-card {
    background-color: color-mix(in srgb, #fff, transparent 92%);
    border-color: color-mix(in srgb, #fff, transparent 90%);
  }

  /* Hover 效果 */
  .ink-fluid-card:hover {
    transform: translateY(-4px);
  }
  html:not(.dark) .ink-fluid-card:hover {
    background-color: #fff;
    border-color: color-mix(in srgb, var(--color-vermilion), transparent 85%);
    box-shadow: 0 10px 30px -10px
      color-mix(in srgb, var(--color-vermilion), transparent 85%);
  }
  html.dark .ink-fluid-card:hover {
    background-color: color-mix(in srgb, #fff, transparent 85%);
    border-color: color-mix(in srgb, var(--color-vermilion), transparent 50%);
    box-shadow:
      0 10px 40px -10px rgba(0, 0, 0, 0.7),
      0 0 20px -5px color-mix(in srgb, var(--color-vermilion), transparent 80%);
  }

  /* =========================================
     2. 子元素样式与 Grid 归属
     ========================================= */

  /* --- 图标容器 --- */
  .icon-container {
    grid-area: icon; /* 归属 icon 区域 */

    flex-shrink: 0;
    width: 3.5rem;
    height: 3.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    border: 1px solid;
    font-family: var(--font-code);
    font-weight: bold;
    font-size: 0.8rem;
    transition: all 0.3s ease;
    background-color: #fff;
    border-color: var(--color-ink-100);
    color: var(--color-ink-400);
  }
  html.dark .icon-container {
    background-color: color-mix(in srgb, #fff, transparent 88%);
    border-color: color-mix(in srgb, #fff, transparent 90%);
    color: var(--text-muted);
  }
  .ink-fluid-card:hover .icon-container {
    transform: scale(1.05);
  }
  html:not(.dark) .ink-fluid-card:hover .icon-container {
    color: var(--color-vermilion);
    border-color: var(--color-vermilion);
    background-color: color-mix(
      in srgb,
      var(--color-vermilion),
      transparent 95%
    );
  }
  html.dark .ink-fluid-card:hover .icon-container {
    background-color: color-mix(
      in srgb,
      var(--color-vermilion),
      transparent 75%
    );
    border-color: color-mix(in srgb, var(--color-vermilion), transparent 50%);
    color: color-mix(in srgb, var(--color-vermilion), #fff 20%);
  }

  /* --- 标题栏 (标题+徽标) --- */
  .header {
    grid-area: header; /* 归属 header 区域 */

    display: flex;
    align-items: center;
    gap: 0.8rem;
    flex-wrap: wrap;
  }

  .title {
    margin: 0;
    font-size: 1.15rem;
    line-height: 1.3;
    font-weight: bold;
    transition: color 0.3s;
    color: var(--color-ink-900);
    white-space: normal;
    word-break: break-word;
  }
  html.dark .title {
    color: var(--prose-heading);
  }
  .ink-fluid-card:hover .title {
    color: var(--color-vermilion);
  }

  .size-badge {
    /* 样式保持不变 */
    font-family: var(--font-sans);
    font-size: 0.75rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
    padding: 3px 8px;
    border-radius: 99px;
    white-space: nowrap;
    flex-shrink: 0;
    background-color: var(--color-ink-100);
    color: var(--text-muted);
  }
  html.dark .size-badge {
    background-color: var(--code-block-bg);
    color: var(--text-muted);
  }

  /* --- 描述文本 --- */
  .desc {
    grid-area: desc; /* 归属 desc 区域 */

    margin: 0;
    margin-top: -0.2rem;
    font-size: 0.9rem;
    line-height: 1.5;
    color: var(--color-ink-500);
    /* 文本截断逻辑 */
    white-space: normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* [移动端] */
  @media (max-width: 640px) {
    .desc {
      align-self: start; /* 靠上对齐 */
      padding-right: 3rem; /* 右侧留白 */
      margin-top: 0.2rem;
    }
  }

  html.dark .desc {
    color: var(--text-muted);
  }

  /* --- 交互按钮 --- */
  .action-btn {
    grid-area: action; /* [桌面端] 归属 action 区域 */

    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
    transition: all 0.3s ease;
    color: var(--color-ink-300);
  }

  /* [移动端] */
  @media (max-width: 640px) {
    .action-btn {
      position: absolute; /* 绝对定位 */
      bottom: 0.8rem; /* 固定在右下角 */
      right: 0.8rem;
      grid-area: none; /* 从 Grid 流中移除 */
    }
  }

  html.dark .action-btn {
    color: var(--text-muted);
  }
  .download-icon {
    width: 1.5rem;
    height: 1.5rem;
  }
  .ink-fluid-card:hover .action-btn {
    background-color: var(--color-vermilion);
    color: white;
    transform: rotate(-10deg) scale(1.1);
    box-shadow: 0 4px 10px
      color-mix(in srgb, var(--color-vermilion), transparent 70%);
  }
</style>
