---
// src/components/RecentMusic.astro
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";

const allMusic = await getCollection("music");

const sortedMusic = allMusic.sort(
  (a, b) =>
    new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);
---

<div class="flex flex-col">
  {
    sortedMusic.map((song) => (
      <article class="group flex items-center gap-6 py-6 border-b border-ink-300/20 dark:border-zinc-800 last:border-0 transition-all duration-500 md:hover:pl-4">
        {/* 封面区域 */}
        <div class="relative shrink-0">
          <div class="absolute inset-0 bg-ink-900/5 dark:bg-white/5 rounded-sm rotate-3 md:group-hover:rotate-6 transition-transform duration-500" />

          <Image
            src={song.data.coverImage}
            alt={`封面：${song.data.title}`}
            width={120}
            height={120}
            format="webp"
            loading="eager"
            class="relative z-10 w-16 h-16 md:w-20 md:h-20 rounded-sm object-cover filter grayscale contrast-125 transition-all duration-500 shadow-sm md:group-hover:grayscale-0 md:group-hover:contrast-100 md:group-hover:shadow-md active:grayscale-0 active:contrast-100 active:scale-95"
          />
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-4 h-4 bg-ink-100 rounded-full z-20 opacity-0 md:group-hover:opacity-20 transition-opacity duration-500 pointer-events-none mix-blend-overlay" />
        </div>

        <div class="grow min-w-0 flex flex-col justify-center gap-1">
          <h4
            class="text-lg md:text-xl font-serif font-bold text-ink-900 dark:text-zinc-200 truncate md:group-hover:text-vermilion transition-colors duration-300"
            title={song.data.title}
          >
            {song.data.title}
          </h4>

          <p
            class="text-xs md:text-sm font-sans text-ink-500 dark:text-zinc-400 truncate tracking-wider uppercase opacity-80 transition-colors"
            title={song.data.artist}
          >
            {song.data.artist}
          </p>
        </div>

        {/* 链接区域 */}
        <div class="flex gap-3 transition-all duration-500 opacity-100 translate-x-0 md:opacity-0 md:translate-x-4 md:group-hover:opacity-100 md:group-hover:translate-x-0">
          {song.data.links?.spotify && (
            <a
              href={song.data.links.spotify}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Spotify"
              class="text-ink-300 dark:text-zinc-500 transition-all duration-300 hover:text-vermilion dark:hover:text-vermilion hover:scale-110 active:text-vermilion active:scale-90"
            >
              <Icon name="mingcute:spotify-line" class="w-5 h-5" />
            </a>
          )}
          {song.data.links?.netease && (
            <a
              href={song.data.links.netease}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Netease Music"
              class="text-ink-300 dark:text-zinc-500 transition-all duration-300 hover:text-vermilion dark:hover:text-vermilion hover:scale-110 active:text-vermilion active:scale-90"
            >
              <Icon name="mingcute:netease-music-line" class="w-5 h-5" />
            </a>
          )}
          {song.data.links?.qqMusic && (
            <a
              href={song.data.links.qqMusic}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="QQ Music"
              class="text-ink-300 dark:text-zinc-500 transition-all duration-300 hover:text-vermilion dark:hover:text-vermilion hover:scale-110 active:text-vermilion active:scale-90"
            >
              <Icon name="mingcute:music-3-line" class="w-5 h-5" />
            </a>
          )}
        </div>
      </article>
    ))
  }
</div>
